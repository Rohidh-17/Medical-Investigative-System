@{
    ViewBag.Title = "TreatmentDetails";
    Layout = "~/Views/_Shared.cshtml";
}

<h2>TreatmentDetails</h2>
<div ng-controller="TreatmentDetailsController">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form>

                    <input type="hidden" id="txtTreatmentCode" ng-model="Treatment.TreatmentCode" />


                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Hospital ID</label>
                        <div class="col-sm-9">
                            <select class="form-control" ng-model="Treatment.HospitalID" id="txtHospitalID">
                                <option value="">--SELECT HOSPITAL ID--</option>
                                <option ng-repeat="re in Hospital" value="{{re.HospitalCode}}">{{re.HospitalID}}</option>

                            </select>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Hospital Name</label>
                        <div class="col-sm-9">
                            <select class="form-control" ng-model="Treatment.HospitalName" id="txtHospitalName">
                                <option value="">--SELECT HOSPITAL NAME--</option>
                                <option ng-repeat="re in Hospital" value="{{re.HospitalCode}}">{{re.HospitalName}}</option>

                            </select>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Patient ID</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtPatientID" ng-model="Treatment.PatientID" placeholder="Enter Your Patient ID ">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Patient Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtPatientName" ng-model="Treatment.PatientName" placeholder="Enter Your Patient Name">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Address</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtAddress" ng-model="Treatment.Address" placeholder="Enter Your Address">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Attended Doctor Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtDoctorName" ng-model="Treatment.DoctorName" placeholder="Enter the Doctor Name">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Speciality</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtSpeciality" ng-model="Treatment.Speciality" placeholder="Enter Your Speciality">
                        </div>
                    </div>
                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Treatment ID</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtTreatmentID" ng-model="Treatment.TreatmentID" placeholder="Enter the Treatment ID">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Treatment Date</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtTreatmentDate" ng-model="Treatment.TreatmentDate" placeholder="Enter the Treatment Date">
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Prescription</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="5" id="txtPrescription" ng-model="Treatment.Prescription" placeholder="Enter the Prescription">  </textarea>
                        </div>
                    </div>


                    <div class="row justify-content-end">
                        <div class="col-sm-9">
                            <div>
                                <button type="button" class="btn btn-primary w-md" ng-click="Save()">Save</button>
                                &nbsp;&nbsp;&nbsp;
                            <button type="button" class="btn btn-secondary w-md" ng-click="ModelInitialize()">Clear</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

