@{
    ViewBag.Title = "BloodPressureReportDetails";
    Layout = "~/Views/_Shared.cshtml";
}

<h2>Blood Pressure Report Details</h2>

<div ng-controller="BloodPressureDetailsReport_Controller">
    <section class="team-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="member-form comment-respond">
                        <h2>@ViewBag.Heading</h2>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <table style="width: 100%">
                                    <tr>
                                        <th style="font-size:larger">BillDate</th>
                                        <th style="font-size:larger">PatientID</th>
                                        <th style="font-size:larger">PatientName</th>
                                        <th style="font-size:larger">TreatmentID</th>
                                        <th style="font-size:larger">TreatmentDate</th>
                                        <th style="font-size:larger">DoctorName</th>

                                    </tr>
                                    <tr>
                                        <tr class="cart_item" ng-repeat="re in Record">
                                            <td class="product-total"><span class="amount">{{re.BillDate}}</span></td>
                                            <td class="product-total"><span class="amount">{{re.PatientID}}</span></td>
                                            <td class="product-total"><span class="amount">{{re.PatientName}}  </span></td>
                                            <td class="product-total"><span class="amount">{{re.TreatmentID}}   </span></td>
                                            <td class="product-total"><span class="amount">{{re.TreatmentDate}}  </span></td>
                                            <td class="product-total"><span class="amount">{{re.DoctorName}}  </span></td>                                            
                                        </tr>
                                    </tr>
                                    
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

