@{
    ViewBag.Title = "ReportDetails";
    Layout = "~/Views/_Shared.cshtml";
}

<h2>ReportDetails</h2>
<div ng-controller="PatientDetailsReport_Controller">
    <section class="team-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="member-form comment-respond">
                        <h2>@ViewBag.Heading</h2>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                <br />
                                <div class="form-group">
                                    <select class="form-control" id="txtPatient" ng-model="Patients.PatientID" ng-change="Patient_Load()">
                                        <option value="">--SELECT--</option>
                                        <option ng-repeat="re in Patient" value="{{re.PatientCode}}">{{re.PatientID}}</option>

                                    </select>

                                <h2>Patient Details</h2><br />
                                </div><label>Patient ID</label><br />
                                <input style="width:1000px"  ng-model="Patients.PatientID" readonly="readonly"><br />
                                <label>Patient Name</label><br />
                                <input style="width:1000px" ng-model="Patients.PatientName" readonly="readonly"><br />
                                <label>Address</label><br />
                                <input style="width:1000px" ng-model="Patients.Address" readonly="readonly"><br />
                                <label>City</label><br />
                                <input style="width:1000px" ng-model="Patients.City" readonly="readonly"><br />
                                <label>Diseases Detail</label><br />
                                <input style="width:1000px" ng-model="Patients.DiseasesDetail" readonly="readonly"><br />

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

